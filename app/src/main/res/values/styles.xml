<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#EB6B6C</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">#F2F5F6</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SpinnerDividerStyle" parent="android:style/Widget.ListView.DropDown">
       <!--divider 색-->
        <item name="android:dividerHeight">2dp</item>   <!--divider 높이-->
    </style>

    <style name="SpinnerTheme" parent="AppTheme">
        <item name="dropDownListViewStyle">@style/SpinnerDividerStyle</item>
    </style>

</resources>
