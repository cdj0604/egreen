<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F6">

    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/a06_view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/a06_toolbar"
            android:background="#dfe4e6" />

        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/a06_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/egreen_splash"
                android:contentDescription="TODO" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/a06_view_toolbar">

            <!-- 이름, 휴대폰번호, 희망전공과정, 문의사항 입력 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp">

                <!--e그린 이미지-->
                <RelativeLayout
                    android:id="@+id/a06_relative01"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/egreen_splash" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        app:srcCompat="@drawable/necessary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="표시는 필수 입력사항입니다."
                        android:textColor="#ff0000"
                        android:textSize="10dp" />

                </LinearLayout>

                <!-- 이름 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        app:srcCompat="@drawable/necessary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center"
                        android:text="이름"
                        android:textSize="13dp" />


                    <EditText
                        android:id="@+id/a06_QAInputName"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/border"
                        android:hint="이름을 입력해주세요."
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:textSize="17dp" />
                </LinearLayout>

                <!-- 휴대폰 번호 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        app:srcCompat="@drawable/necessary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center"
                        android:text="휴대폰 번호"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.8">

                        <Spinner
                            android:id="@+id/a06_QAInputPhone1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/border"
                            android:paddingLeft="20dp"
                            android:textSize="13dp"
                            android:theme="@style/SpinnerTheme" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />

                        <EditText
                            android:id="@+id/a06_QAInputPhone2"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="4"
                            android:textSize="17dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />

                        <EditText
                            android:id="@+id/a06_QAInputPhone3"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="4"
                            android:textSize="17dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 희망전공과정 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        app:srcCompat="@drawable/necessary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center"
                        android:text="상담 희망 전공"
                        android:textSize="13dp" />


                    <Spinner
                        android:id="@+id/a06_QAClassSelect"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/border"
                        android:paddingLeft="10dp"
                        android:textSize="13dp"
                        android:theme="@style/SpinnerTheme" />
                </LinearLayout>

                <!-- 희망상담시간 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        app:srcCompat="@drawable/necessary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:gravity="center"
                        android:text="상담 희망 시간"
                        android:textSize="13dp" />

                    <Spinner
                        android:id="@+id/a06_QATimeSelect"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="0.8"
                        android:background="@drawable/border"
                        android:paddingLeft="10dp"
                        android:textSize="13dp"
                        android:theme="@style/SpinnerTheme" />
                </LinearLayout>

                <!-- 문의사항 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="문의사항"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/a06_QAInputAdvice"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/border"
                    android:gravity="start"
                    android:hint="상담 잘 부탁드립니다. 감사합니다."
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/a06_QABt"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/radius"
                    android:text="문의하기"
                    android:textColor="#fff"
                    android:textSize="19dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>