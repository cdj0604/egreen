<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F6">
    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/a03_view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/a03_toolbar"
            android:background="#FFFFFF" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/a03_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/a03_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="개인정보의 공유 및 취급 위탁에 대한 동의"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/a03_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:onClick="close"
                app:srcCompat="@drawable/close" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/a03_view_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            android:background="#5D5D5D"
                            android:gravity="center_horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="수탁업체"
                            android:textColor="#FFFFFF"
                            android:textSize="8dp"
                            android:textStyle="bold" />

                        <TextView
                            android:background="#5D5D5D"
                            android:gravity="center_horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="수탁목적"
                            android:textColor="#FFFFFF"
                            android:textSize="8dp"
                            android:textStyle="bold" />

                        <TextView
                            android:background="#5D5D5D"
                            android:gravity="center_horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="개인정보항목"
                            android:textColor="#FFFFFF"
                            android:textSize="8dp"
                            android:textStyle="bold" />

                        <TextView
                            android:background="#5D5D5D"
                            android:gravity="center_horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="보유 및 이용기간"
                            android:textColor="#FFFFFF"
                            android:textSize="8dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="서울신용평가정보(주)"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="실명확인, 본인확인"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="이름, 주민등록번호"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="&quot;전자상거래 등에서의 소비자 보호에 관한\n법률&quot; 의한5년 후 파기"
                            android:textSize="8dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="다우기술"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="SMS 발송업무"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="휴대폰"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="&quot;통신비밀보호법&quot; 의한 1년 후 파기"
                            android:textSize="8dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="케이지이니시스"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="전자결제대행서비스 제공"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="이름, 휴대폰, 이메일"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="&quot;전자상거래 등에서의 소비자 보호에 관한\n법률&quot; 의한 5년 후 파기"
                            android:textSize="8dp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="(주)교보문고"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="전자도서관 제공"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="이름, 아이디"
                            android:textSize="8dp" />

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="정보제공 후 바로 파기"
                            android:textSize="8dp" />
                    </TableRow>


                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="• 귀하께서 개인정보 제공 및 활용에 거부할 권리가 있습니다."
                    android:textSize="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="• 거부에 따른 불이익: 해당 사이트의 서비스 이용이 제한될 수도 있습니다."
                    android:textSize="8dp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>