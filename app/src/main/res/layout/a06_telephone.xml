<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="#F2F5F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/a06_view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/a06_toolbar"
            android:background="#dfe4e6" />

        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/a06_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/egreen_splash" />


        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/a06_view_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/a06_telephoneFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center_horizontal"
                        android:text="원하시는 상담 터치 시 통화 연결이 됩니다."
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/a06_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:gravity="center_horizontal"
                        android:text="월~금 09:00 ~ 18:00 / 토, 일, 공휴일 휴무"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:id="@+id/a06_consultingTFrame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_border"
                        android:onClick="go_A06_consultingT"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/a06_consultingT"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_weight=".33"
                            android:padding="10dp"
                            app:srcCompat="@drawable/a06_consulting" />

                        <LinearLayout
                            android:id="@+id/a06_consultingTTextFrame"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_weight="0.66"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="학습상담 및 설계"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="1544-8463"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/a06_operationTFrame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_border"
                        android:onClick="go_A06_operationT"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/a06_operationT"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_weight=".33"
                            android:padding="10dp"
                            app:srcCompat="@drawable/a06_operation" />

                        <LinearLayout
                            android:id="@+id/a06_operationTTextFrame"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_weight="0.66"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="학사운영지원"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="02-540-7802"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/a06_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:gravity="center_horizontal"
                        android:text="시스템 오류 및 장애\n(사이트 점검: 매주 목요일)"
                        android:textColor="#000000"
                        android:textSize="14dp" />


                    <LinearLayout
                        android:id="@+id/a06_PCTFrame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_border"
                        android:onClick="go_A06_PCT"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/a06_PCT"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_weight=".33"
                            android:padding="10dp"
                            app:srcCompat="@drawable/a06_pc" />

                        <LinearLayout
                            android:id="@+id/a06_PCTTextFrame"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_weight="0.66"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="PC"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="02-540-7805"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/a06_mobileTFrame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/round_border"
                        android:onClick="go_A06_mobileT"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/a06_mobileT"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_weight=".33"
                            android:padding="10dp"
                            app:srcCompat="@drawable/a06_mobile" />

                        <LinearLayout
                            android:id="@+id/a06_mobileTTextFrame"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_weight="0.66"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="모바일"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="02-2088-8407"
                                android:textColor="#000000"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/navi_menu" />
</androidx.drawerlayout.widget.DrawerLayout>