<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F6">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Toolbar 시작-->
            <View
                android:id="@+id/a03_view_toolbar"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/a03_toolbar"
                android:background="#dfe4e6" />

            <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/a03_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/egreen_splash"
                    android:contentDescription="TODO" />


            </androidx.appcompat.widget.Toolbar>

            <!--e그린 이미지-->
            <RelativeLayout
                android:id="@+id/a03_relative01"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/a03_view_toolbar"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/egreen_splash" />
            </RelativeLayout>

            <!--순서-->
            <RelativeLayout
                android:id="@+id/a03_relative02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/a03_relative01"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="정보입력"
                        android:textColor="#000000"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/a03_1_off" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/a03_2_on" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/a03_3_off" />
                </LinearLayout>
            </RelativeLayout>

            <!--입력창-->
            <RelativeLayout
                android:id="@+id/a03_relative03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/a03_relative02"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--첫줄/이름-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.12"
                            android:gravity="center"
                            android:text="이름"
                            android:textSize="13dp" />

                        <RelativeLayout
                            android:id="@+id/a03_relative03_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="0.88">

                            <EditText
                                android:id="@+id/a03_inputName"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/border"
                                android:hint="이름 입력해주세요."
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:textSize="13dp" />
                            <!--성별 선택-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="2dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/a03_btn_male"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:text="남"
                                    android:textSize="15dp" />

                                <Button
                                    android:id="@+id/a03_btn_female"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:gravity="center"
                                    android:text="여"
                                    android:textSize="15dp" />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <!--둘째줄/생년월일-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.12"
                            android:gravity="center"
                            android:text="생년\n월일"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="0.88">

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.29">

                                <EditText
                                    android:id="@+id/a03_year"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/border"
                                    android:focusable="false"
                                    android:hint="년"
                                    android:inputType="number"
                                    android:maxLength="5"
                                    android:paddingLeft="10dp"
                                    android:textSize="13dp" />

                                <Spinner
                                    android:id="@+id/a03_yearSpinner"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.29">

                                <EditText
                                    android:id="@+id/a03_month"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="7dp"
                                    android:background="@drawable/border"
                                    android:focusable="false"
                                    android:hint="월"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="3"
                                    android:paddingLeft="10dp"
                                    android:textSize="13dp" />

                                <Spinner
                                    android:id="@+id/a03_monthSpinner"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.29">

                                <EditText
                                    android:id="@+id/a03_day"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="7dp"
                                    android:background="@drawable/border"
                                    android:focusable="false"
                                    android:hint="일"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="3"
                                    android:paddingLeft="10dp"
                                    android:textSize="13dp" />

                                <Spinner
                                    android:id="@+id/a03_daySpinner"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!--셋째줄/비밀번호-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.12"
                            android:gravity="center"
                            android:text="비밀\n번호"
                            android:textSize="13dp" />

                        <EditText
                            android:id="@+id/a03_inputPw"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.88"
                            android:background="@drawable/border"
                            android:hint="숫자, 문자, 특수문자 포함 8~20자리 이내"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <!--넷째줄/비밀번호 확인-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.12"
                            android:gravity="center"
                            android:text="비밀번호 확인"
                            android:textSize="13dp" />

                        <EditText
                            android:id="@+id/a03_reinputPw"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.88"
                            android:background="@drawable/border"
                            android:hint="비밀번호를 한 번 더 입력해주세요."
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <!--다섯째줄/휴대폰 번호-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.12"
                            android:gravity="center"
                            android:text="휴대폰 번호"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.88">

                            <Spinner
                                android:id="@+id/a03_inputPhone1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.29"
                                android:background="@drawable/border"
                                android:inputType="number"
                                android:paddingLeft="30dp"
                                android:textSize="13dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-" />

                            <EditText
                                android:id="@+id/a03_inputPhone2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.29"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="4"

                                android:textSize="13dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-" />

                            <EditText
                                android:id="@+id/a03_inputPhone3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="0.29"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="4"
                                android:textSize="13dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--여섯째줄/이메일-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.12"
                            android:gravity="center"
                            android:text="이메일"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="0.88">

                            <EditText
                                android:id="@+id/a03_inputEmail1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="7dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/border"
                                android:hint="이메일을 입력해주세요."
                                android:inputType="textEmailAddress"
                                android:paddingLeft="10dp"
                                android:textSize="13dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="\@" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">

                                <EditText
                                    android:id="@+id/a03_inputEmail2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="7dp"
                                    android:background="@drawable/border"
                                    android:hint="[직접입력]"
                                    android:inputType="textEmailAddress"
                                    android:paddingLeft="10dp"
                                    android:textSize="13dp" />

                                <Spinner
                                    android:id="@+id/a03_emailSpinner"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!--가입하기 버튼-->
                    <Button
                        android:id="@+id/a03_join_btn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/radius"
                        android:text="가입하기"
                        android:textColor="#fff"
                        android:textSize="19dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>